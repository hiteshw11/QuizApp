<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Question2">



    <TextView
        android:id="@+id/textViewQuestion3"
        android:layout_width="295dp"
        android:layout_height="108dp"
        android:textColor="#000000"
        android:text="Which Of These Is A Landlocked Country?"
        android:textStyle="bold"
        android:gravity="center"
        style="@style/RoundedViewStyleGold"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <RadioGroup
        android:id="@+id/radioGroup4"
        style="@style/RoundedViewStyleEmerald"
        android:layout_width="284dp"
        android:layout_height="232dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintVertical_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/q3radioButtonOne"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="France"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/q3radioButtonTwo"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Turkey"
            android:textSize="25sp"/>

        <RadioButton
            android:id="@+id/q3radioButtonThree"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bhutan"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/q3radioButtonFour"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kenya"
            android:textSize="25sp" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonQuestion3"
        android:layout_width="178dp"
        android:layout_height="90dp"
        android:gravity="center"
        android:text="Next Question"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.796" />

    <TextView
        android:id="@+id/score_question3"
        style="@style/RoundedViewStylePurple"
        android:layout_width="158dp"
        android:layout_height="61dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.861"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />
</androidx.constraintlayout.widget.ConstraintLayout>